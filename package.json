{
  "name": "@woodwing/csde-components-validator",
  "version": "1.3.0",
  "description": "Validation module for Content Station Digital Editor components packages.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf ./dist && npm run tslint & tsc",
    "watch": "tsc --watch",
    "test": "npm run tslint && tsc -p tsconfig.test.json --noEmit && jest --forceExit --coverage --verbose",
    "watchtest": "jest --forceExit --coverage --verbose --watchAll",
    "tslint": "npm run tslint-lib && npm run tslint-test",
    "tslint-lib": "tslint -c tslint.json -p tsconfig.json",
    "tslint-test": "tslint -c tslint.json -p tsconfig.test.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WoodWing/csde-components-validator.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/WoodWing/csde-components-validator/issues"
  },
  "homepage": "https://github.com/WoodWing/csde-components-validator#readme",
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^9.6.36",
    "@types/recursive-readdir": "^2.2.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/htmlparser2": "^3.7.31",
    "@types/lodash": "^4.14.117",
    "@types/semver": "^5.5.0",
    "ajv": "^6.5.4",
    "ajv-errors": "^1.0.0",
    "colors": "^1.3.2",
    "htmlparser2": "^3.10.0",
    "lodash": "^4.17.11",
    "pngjs": "^3.3.0",
    "recursive-readdir": "^2.2.2",
    "semver": "^5.6.0"
  }
}

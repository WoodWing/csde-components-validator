{
  "name": "@woodwing/csde-components-validator",
  "version": "1.10.1",
  "description": "Validation module for Content Station Digital Editor components packages.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "lib/"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf ./dist && npm run eslint & tsc",
    "watch": "tsc --watch",
    "test": "npm run eslint && tsc -p tsconfig.test.json --noEmit && jest --forceExit --coverage --verbose --detectOpenHandles",
    "watchtest": "jest --forceExit --coverage --verbose --detectOpenHandles --watchAll",
    "eslint": "npm run eslint-lib && npm run eslint-test",
    "eslint-lib": "eslint ./lib",
    "eslint-test": "eslint ./test",
    "format:write": "prettier --write '**/*'",
    "format:check": "prettier -l '**/*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WoodWing/csde-components-validator.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/WoodWing/csde-components-validator/issues"
  },
  "homepage": "https://github.com/WoodWing/csde-components-validator#readme",
  "devDependencies": {
    "@types/htmlparser2": "3.7.31",
    "@types/jest": "^26.0.0",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^12.12.6",
    "@types/pngjs": "^6.0.0",
    "@types/recursive-readdir": "^2.2.0",
    "@types/semver": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "ajv": "^7.0.4",
    "ajv-formats": "^1.5.1",
    "colors": "^1.4.0",
    "htmlparser2": "^3.10.0",
    "json-source-map": "^0.6.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "pngjs": "^3.3.0",
    "semver": "^6.2.0"
  }
}

{
  "name": "@woodwing/csde-components-validator",
  "version": "1.6.1",
  "description": "Validation module for Content Station Digital Editor components packages.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "lib/"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf ./dist && npm run tslint & tsc",
    "watch": "tsc --watch",
    "test": "npm run tslint && tsc -p tsconfig.test.json --noEmit && jest --forceExit --coverage --verbose --detectOpenHandles",
    "watchtest": "jest --forceExit --coverage --verbose --detectOpenHandles --watchAll",
    "tslint": "npm run tslint-lib && npm run tslint-test",
    "tslint-lib": "tslint -c tslint.json -p tsconfig.json",
    "tslint-test": "tslint -c tslint.json -p tsconfig.test.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WoodWing/csde-components-validator.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/WoodWing/csde-components-validator/issues"
  },
  "homepage": "https://github.com/WoodWing/csde-components-validator#readme",
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/htmlparser2": "3.7.31",
    "@types/jest": "^25.1.4",
    "@types/node": "^9.6.36",
    "@types/recursive-readdir": "^2.2.0",
    "@types/semver": "^6.0.1",
    "jest": "^25.1.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "ajv": "^6.5.4",
    "ajv-errors": "^1.0.0",
    "colors": "^1.3.2",
    "htmlparser2": "^3.10.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "pngjs": "^3.3.0",
    "recursive-readdir": "^2.2.2",
    "semver": "^6.2.0"
  }
}
